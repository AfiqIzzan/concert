<% @order.carts.each do |cart| %>
  <% ticket = cart.ticket %>
  <div id="<%= "order-#{ticket.id}" %>">
    <div style="display:flex;justify-content:space-between;margin: 0em 5em;">
      <strong>Name:</strong>
      <%= ticket.name %>
      <strong>Price:</strong>
      <%= ticket.price %>
      <%= form_with(url: order_add_path) do |f| %>
        <%= f.hidden_field :id, value: ticket.id %>
        <%= f.number_field :quantity, value: cart.quantity, min: 0 %>
        <%= f.submit "Add To order" %>
      <% end %>
      <%= form_with(url: order_remove_path) do |f| %>
        <%= f.hidden_field :id, value: cart.id %>
        <%= f.submit "X" %>
      <% end %>
      <strong>Total:</strong>
      <%= cart.total %>
    </div>
  </div>
<% end %>