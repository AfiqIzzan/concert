<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg'); height: 160px;"></div>
  <!-- Background image -->

  <div class="card mx-1 mx-md-5 shadow-5-strong" style="margin-top: -100px; background: hsla(0, 0%, 100%, 0.8); backdrop-filter: blur(30px);">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-5">
          <h2 class="fw-bold mb-5">Create Account</h2>
          <%= bootstrap_form_for(resource, 
                       :as => resource_name, 
                       :url => registration_path(resource_name)) do |f| %>

          <%= f.text_field :username, 
                    placeholder: 'username (will be shown publicly)', 
                    class: 'form-control' %>
          <%= f.text_field :email, 
                    placeholder: 'email', 
                    class: 'form-control' %>
          <%= f.password_field :password, 
                              placeholder: 'password', 
                              class: 'form-control' %>
          <%= f.password_field :password_confirmation, 
                              placeholder: 'password confirmation', 
                              class: 'form-control' %>
          <%= f.submit 'Sign up', class: 'form-control' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->