<div class="container">
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-80">
      <div class="row d-flex justify-content-center align-items-center h-80">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card-devise">
            <div class="card-body-devise p-5 text-center">

              <div>

                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                <p><small>Please enter your login and password!</small></p><br>

                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs">
                    <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
                    <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Log in", class: "btn btn-outline-dark px-5" %>
                  </div>
                  <br>
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                    <p class="small pb-lg-2"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p><br />
                  <% end %>
                <% end %>

              </div>

              <div>
                <p class="mb-0">Want to be an organizer? <%= link_to "Sign Up", new_organizer_registration_path, class:"text fw-bold" %>
                </p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
